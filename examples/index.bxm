    <!-- Demo Page Analytics -->
    <script type="text/javascript">
        // Initialize demo gallery
        document.addEventListener('DOMContentLoaded', function() {
            console.log('BoxLang UI Components Demo Gallery loaded');
            console.log('Available demos:', [
                'Layout & LayoutArea Components',
                'Grid Components (Grid, GridColumn, GridRow)',
                'Pod Component',
                'Div Component',
                'Tooltip Component',
                'AJAX Components (AjaxImport, AjaxProxy, GridUpdate)',
                'BIFs (AjaxLink, AjaxOnLoad, QueryConvertForGrid)',
                'Original AJAX Demo'
            ]);

            // Add click tracking for demo links
            var demoLinks = document.querySelectorAll('.demo-link');
            demoLinks.forEach(function(link) {
                link.addEventListener('click', function(e) {
                    var demoName = this.textContent.trim();
                    console.log('Demo accessed:', demoName);

                    // Show loading state
                    var originalText = this.textContent;
                    this.textContent = 'Loading...';

                    setTimeout(function() {
                        link.textContent = originalText;
                    }, 1000);
                });
            });

            // Add animation delays to cards
            var cards = document.querySelectorAll('.demo-card');
            cards.forEach(function(card, index) {
                card.style.animationDelay = (index * 0.1) + 's';
            });
        });
    </script>
